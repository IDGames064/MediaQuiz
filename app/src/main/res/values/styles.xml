<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/amber_200</item>
        <item name="colorPrimaryDark">@color/amber_400</item>
        <item name="colorAccent">@color/amber_200</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:windowBackground">@color/grey_900</item>
        <item name="colorBackgroundFloating">@color/grey_800</item>
        <item name="android:textColor">@color/amber_200</item>
        <item name="android:textColorPrimary">@color/amber_300</item>
        <item name="android:textAppearanceInverse">@color/black</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">32dp</item>
        <item name="rippleColor">@color/blue_grey_400</item>
        <item name="strokeColor">@color/blue_grey_400</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:shadowColor">@color/blue_grey_100</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
    </style>

    <style name="OptionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">32dp</item>
        <item name="rippleColor">@color/blue_grey_400</item>
        <item name="strokeColor">@color/blue_grey_400</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/amber_50</item>
        <item name="android:textSize">@dimen/option_text_size</item>
        <item name="android:backgroundTint">#000816</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="HintButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/teal_200</item>
        <item name="strokeColor">@color/teal_200</item>
        <item name="android:minHeight">47dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:backgroundTint">@color/teal_600</item>
    </style>

    <style name="AppIconButton" parent="AppButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

</resources>